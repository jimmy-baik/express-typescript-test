<!-- 헤더 -->
<header class="header">
    <div class="header-content">
        <div class="header-left">
            <!-- <a class="hamburger" href="/feeds">
                <span></span>
                <span></span>
                <span></span>
            </a> -->
            <a class="home-link" href="/feeds" aria-label="홈으로 이동">
                <svg class="home-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9.5 12 3l9 6.5V20a1 1 0 0 1-1 1h-5v-6H9v6H4a1 1 0 0 1-1-1Z"></path>
                </svg>
            </a>
        </div>
        <div class="search-container">
            <% if (typeof feedSlug !== 'undefined') { %>
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
                <% if (typeof userQuery !== 'undefined' && userQuery) { %>
                    <form method="GET" action="/feeds/<%= feedSlug %>" style="display: flex; align-items: center;">
                        <input type="text" name="q" class="search-input" placeholder="검색" value="<%= userQuery %>" />
                        <a href="/feeds/<%= feedSlug %>" style="background: none; border: none; cursor: pointer; position: relative; right: 30px;">
                            <svg viewBox="0 0 20 20" width="18" height="18" stroke="currentColor" fill="none" stroke-width="2" style="vertical-align: middle;">
                                <line x1="6" y1="6" x2="14" y2="14"/>
                                <line x1="14" y1="6" x2="6" y2="14"/>
                            </svg>
                        </a>
                    </form>
                <% } else { %>
                    <form method="GET" action="/feeds/<%= feedSlug %>" style="display: contents;">
                        <input type="text" name="q" class="search-input" placeholder="검색" />
                    </form>
                <% } %>
            <% } %>

        </div>
        <div class="header-right">
            <% if (typeof feedSlug !== 'undefined' && typeof showAddContentBtn !== 'undefined' && showAddContentBtn) { %>
                <a href="/feeds/<%= feedSlug %>/invites/new" class="add-content-btn">
                    <svg class="people-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    초대
                </a>
                <a href="/feeds/<%= feedSlug %>/new-url" class="add-content-btn">
                    <svg class="add-content-btn-icon" viewBox="0 0 24 24">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    컨텐츠 추가
                </a>
            <% } %>
            <!-- <svg class="notification-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg> -->
            <!-- <div class="profile-icon">U</div> -->
        </div>
    </div>
</header>
